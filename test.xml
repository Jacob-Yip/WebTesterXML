<!--<!DOCTYPE generic-web-testing SYSTEM "web-testing.dtd">-->
<generic-web-testing version="1.0">
    <webforms>
        <webform url="" timeout="" submissiontimeout="" browsers=""><!-- browsers or browser? -->
            <fieldset>
                <field accessedby="id" key="inputLoginID" type="text" action="type" value="" />
                <field accessedby="id" key="inputLoginPW" type="password" action="type" value="" />
            </fieldset>
            <tests>
                <!-- description: compulsory, general, submission -->
                <test id="1" description="compulsory" run="true" language="en">
                    <!-- action: click, type, select -->
                    <step accessby="id" key="inputLoginID" action="type" value="TestLoginID1" />
                    <step accessby="id" key="inputLoginID" action="type" value="TestLoginPW1" />
                    <step accessby="id" key="inputSubmit" action="click" value="" />
                    <expectation formsubmission="true" accessby="id" key="errorMessageLogin" value="Invalid Input!" />
                </test>
                <test id="2" description="compulsory" run="true" language="en">
                    <!-- action: click, type, select -->
                    <step accessby="id" key="inputLoginID" action="type" value="TestLoginID2" />
                    <step accessby="id" key="inputLoginID" action="type" value="TestLoginPW2" />
                    <step accessby="id" key="inputSubmit" action="click" value="" />
                    <expectation formsubmission="true" accessby="id" key="successfulMessageLogin" value="Successful Login!" />
                </test>
            </tests>
        </webform>
    </webforms>
</generic-web-testing>